<?xml version="1.0" encoding="UTF-8"?>

<!-- Carregador que gera (spawn) o modelo do robo a partir de um arquivo 
    de descrição xacro  -->
         
<launch>
    <arg name="robot_name" default="tangs" />
    <arg name="x" default="0.0" />
    <arg name="y" default="0.0" />
    <arg name="z" default="0.0" />
    <arg name="xacro_file_path" default="$(find tangs_description)/urdf/tangs.xacro" />

    <!-- Carrega o URDF no parâmetro global "robot_description" -->
    <param 
        name="robot_description" 
        command="$(find xacro)/xacro $(arg xacro_file_path) robot_name:=$(arg robot_name)/" 
    />

    <!-- Spawn do modelo no Gazebo -->
    <node 
        name="$(arg robot_name)_urdf_spawner" 
        pkg="gazebo_ros" 
        type="spawn_model" 
        respawn="false" 
        output="screen"
        args="-urdf 
              -x $(arg x) -y $(arg y) -z $(arg z) 
              -model $(arg robot_name) 
              -param robot_description"
    />

    
</launch>
