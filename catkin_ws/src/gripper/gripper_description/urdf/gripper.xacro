<?xml version="1.0" ?>
<robot name="rg3" xmlns:xacro="http://ros.org/wiki/xacro">

    <!-- Argumento para o prefixo TF -->
    <xacro:arg name="robot_name" default="tangs" />
    <xacro:property name="tf_prefix" value="$(arg robot_name)" />
    
    <xacro:property name="pi" value="3.141592654" />
    <xacro:include filename="$(find gripper_description)/urdf/gazebo.xacro" />
    <xacro:include filename="$(find gripper_description)/urdf/transmissions.xacro" />

    <!-- Xmacro principal que gera a garra -->

    <xacro:macro name="gripper" params="parent_link" >   

    <link name="${tf_prefix}/palm_link">
        <collision>
            <origin xyz="0.015 0.015 -0.018" rpy="${pi} ${-pi} 0.0"/>
            <geometry>
                <!-- <mesh filename="package://gripper_description/meshes/collision/RG3_Palm_col.stl"/> -->
                <mesh filename="package://gripper_description/meshes/visual/RG3_gripper_base_m_tk2.stl"/>
            </geometry>
        </collision>
        <visual>
            <!-- <origin xyz="0.00 0.0015 -0.014" rpy="0.00 0.00 0.00"/> -->
            <origin xyz="0.015 0.015 -0.018" rpy="${pi} ${-pi} 0.0"/>
            <geometry>
                <mesh filename="package://gripper_description/meshes/visual/RG3_gripper_base_m_tk2.stl"/>
            </geometry>
        </visual>
        <inertial>
            <origin xyz="-0.061902 0.000129 -0.000005" rpy="0.00 0.00 0.00"/>
            <mass value="0.02"/>
            <inertia ixx="0.002" ixy="0.0" ixz="0.0" iyy="0.02" iyz="0.0" izz="0.002" />  
        </inertial>
    </link>
    
    <link name="${tf_prefix}/l_moment_arm_link">
        <collision>
            <origin rpy="0.00 0.00 3.01415" xyz="0.01 -0.0021 0.0005" />
            <geometry>
                <mesh filename="package://gripper_description/meshes/visual/RG3_gear_left_m.stl"/>
            </geometry>
        </collision>
        <visual>
            <origin xyz="0.01 -0.0021 0.0005" rpy="0.00 0.00 3.01415"/>
            <geometry>
                <mesh filename="package://gripper_description/meshes/visual/RG3_gear_left_m.stl"/>
            </geometry>
        </visual>
        <inertial>
            <origin xyz="0.017004 0.006397 -0.010300" rpy="0.00 0.00 0.00"/>
            <mass value="0.0060209"/>
            <inertia ixx="0.002" ixy="0.0" ixz="0.0" iyy="0.02" iyz="0.0" izz="0.002" />
        </inertial>
    </link>
    
    <link name="${tf_prefix}/l_finger_link">
        <collision>
            <origin xyz="0.030 -0.005 0.0045" rpy="0.00 0.00 -0.38"/>
            <geometry>
                <mesh filename="package://gripper_description/meshes/visual/RG3_grip_finger_left_m.stl"/>
            </geometry>
        </collision>
        <visual>
            <origin xyz="0.030 -0.005 0.0045" rpy="0.00 0.00 -0.38"/>
            <geometry>
                <mesh filename="package://gripper_description/meshes/visual/RG3_grip_finger_left_m.stl"/>
            </geometry>
        </visual>
        <inertial>
            <origin xyz="0.024695 -0.010178 -0.010001" rpy="0.00 0.00 0.00"/>
            <mass value="0.0081638"/>
            <inertia ixx="0.002" ixy="0.0" ixz="0.0" iyy="0.02" iyz="0.0" izz="0.002" />
        </inertial>
    </link>

    <link name="${tf_prefix}/l_truss_arm_link">
        <collision>
            <origin xyz="0.016 0.00 0.00" rpy="0.00 0.00 0"/>
            <geometry>
                <mesh filename="package://gripper_description/meshes/visual/RG3_grip_link_left_m.stl"/>
            </geometry>
        </collision>
        <visual>
            <origin xyz="0.016 0.00 0.00" rpy="0.00 0.00 0"/>
            <geometry>
                <mesh filename="package://gripper_description/meshes/visual/RG3_grip_link_left_m.stl"/>
            </geometry>
        </visual>
        <inertial>
            <origin xyz="0.023075 0.012136 -0.010000" rpy="0.00 0.00 0.00"/>
            <mass value="0.0065927"/>
            <inertia ixx="0.002" ixy="0.0" ixz="0.0" iyy="0.02" iyz="0.0" izz="0.002" />
        </inertial>
    </link>
  
    <link name="${tf_prefix}/r_moment_arm_link">
        <collision>
            <origin xyz="0.01 -0.0111 0.0005" rpy="0.00 0.00 3.000415"/>
            <geometry>
                <mesh filename="package://gripper_description/meshes/visual/RG3_gear_right_m.stl"/>
            </geometry>
        </collision>
        <visual>
            <origin xyz="0.01 -0.0111 0.0005" rpy="0.00 0.00 3.000415"/>
            <geometry>
                <mesh filename="package://gripper_description/meshes/visual/RG3_gear_right_m.stl"/>
            </geometry>
        </visual>
        <inertial>
            <origin xyz="0.017004 -0.006397 -0.010300" rpy="0.00 0.00 0.00"/>
            <mass value="0.0060209"/>
            <inertia ixx="0.002" ixy="0.0" ixz="0.0" iyy="0.02" iyz="0.0" izz="0.002" />
        </inertial>
    </link>

    <link name="${tf_prefix}/r_truss_arm_link">
        <collision>
             <origin xyz="0.016 -0.000 0.0045" rpy="0.0 0.0 0.0"/>
            <geometry>
                <mesh filename="package://gripper_description/meshes/visual/RG3_grip_link_left_m.stl"/>
            </geometry>
        </collision>
        <visual>
             <origin xyz="0.016 -0.000 0.0045" rpy="0.00 0.00 0.0"/>
            <geometry>
                <mesh filename="package://gripper_description/meshes/visual/RG3_grip_link_left_m.stl"/>
            </geometry>
        </visual>
        <inertial>
            <origin xyz="0.023075 -0.012136 -0.010000" rpy="0.00 0.00 0.00"/>
            <mass value="0.0065927"/>
            <inertia ixx="0.002" ixy="0.0" ixz="0.0" iyy="0.02" iyz="0.0" izz="0.002" />
        </inertial>
    </link>

    <link name="${tf_prefix}/r_finger_link">
        <collision>
            <origin xyz="0.022 0.026 0.020" rpy="0.00 3.1415 0.38"/>
            <geometry>
               <mesh filename="package://gripper_description/meshes/visual/gear_right3.stl"/>
            </geometry>
        </collision>
        <visual>
            <origin xyz="0.022 0.026 0.020" rpy="0.00 3.1415 0.38"/>
            <geometry>
                <mesh filename="package://gripper_description/meshes/visual/gear_right3.stl"/>
            </geometry>
        </visual>
        <inertial>
            <origin xyz="0.024695 0.010178 -0.010000" rpy="0.00 0.00 0.00"/>
            <mass value="0.0081637"/>
            <inertia ixx="0.002" ixy="0.0" ixz="0.0" iyy="0.02" iyz="0.0" izz="0.002" />
        </inertial>
    </link>

    <!-- Juntas -->

    <joint name="${tf_prefix}/gripper_joint" type="revolute">
        <parent link="${tf_prefix}/palm_link"/>
        <child link="${tf_prefix}/l_moment_arm_link"/>
        <origin xyz="-0.042 -0.005 0.012" rpy="0 0 ${pi}"/>
        <axis xyz="0 0 1"/>
        <limit velocity="3.0" effort="200" lower="${0}" upper="${pi*0.5}" />
        <dynamics damping="0.3" friction="0.0" />
        <implicitSpringDamper>True</implicitSpringDamper>
    </joint>
     
    <xacro:insert_transmission name="${tf_prefix}/gripper_joint" />
    
    <joint name="${tf_prefix}/l_finger_2_joint" type="revolute">
        <parent link="${tf_prefix}/l_moment_arm_link"/>
        <child link="${tf_prefix}/l_finger_link"/>
        <origin xyz="0.0315 0.0008 0.000" rpy="0 0 0"/>
        <axis xyz="0 0 1"/>
        <limit velocity="3.14" effort="10.6" lower="${-pi*0.5}" upper="${pi*0.5}" />
        <!-- <limit velocity="3.14" effort="100" lower="-3" upper="3" /> -->
        <mimic joint="${tf_prefix}/gripper_joint" multiplier="-1"/>
        <dynamics damping="0.3" friction="0.0" />
        <implicitSpringDamper>True</implicitSpringDamper>
    </joint>

    <!-- Atenção: esta linha abaixo gera problemas na garra!!! -->
    <!-- <xacro:insert_transmission name="${tf_prefix}/l_finger_2_joint" />  -->
     
    <xacro:mimic_joint_plugin_gazebo robot_namespace=""
                                     name_prefix="${tf_prefix}/l_finger_2_joint"
                                     parent_joint="${tf_prefix}/gripper_joint"
                                     mimic_joint="${tf_prefix}/l_finger_2_joint"
                                     has_pid="false"
                                     multiplier="-1.0"
                                     max_effort="10.6" />
    
    <joint name="${tf_prefix}/l_finger_passive_joint" type="revolute">
        <parent link="${tf_prefix}/palm_link"/>
        <child link="${tf_prefix}/l_truss_arm_link"/>
         <origin xyz="-0.062 0.0045 0.012" rpy="0 0 ${pi}"/>
        <axis xyz="0 0 1"/>
        <limit velocity="3.14" effort="10.6" lower="${-pi*0.5}" upper="${pi*0.5}" />
        <mimic joint="${tf_prefix}/gripper_joint" multiplier="1"/>
        <dynamics damping="0.3" friction="0.0" />
        <implicitSpringDamper>True</implicitSpringDamper>
    </joint>
     
    <xacro:mimic_joint_plugin_gazebo robot_namespace=""
                                     name_prefix="${tf_prefix}/l_finger_passive_joint"
                                     parent_joint="${tf_prefix}/gripper_joint"
                                     mimic_joint="${tf_prefix}/l_finger_passive_joint"
                                     has_pid="false"
                                     multiplier="1.0"
                                     max_effort="10.6" />

    <joint name="${tf_prefix}/r_finger_1_joint" type="revolute">
        <parent link="${tf_prefix}/palm_link"/>
        <child link="${tf_prefix}/r_moment_arm_link"/>
        <origin xyz="-0.042 0.022 0.008" rpy="0 0 ${pi}"/>
        <axis xyz="0 0 1"/>
        <limit velocity="3.14" effort="10.6" lower="${-pi*0.5}" upper="${pi*0.5}" />
        <mimic joint="${tf_prefix}/gripper_joint" multiplier="-1"/>
        <dynamics damping="0.3" friction="0.0" />
        <implicitSpringDamper>True</implicitSpringDamper>
    </joint>
    
    <xacro:mimic_joint_plugin_gazebo robot_namespace=""
                                     name_prefix="${tf_prefix}/r_finger_1_joint"
                                     parent_joint="${tf_prefix}/gripper_joint"
                                     mimic_joint="${tf_prefix}/r_finger_1_joint"
                                     has_pid="false"
                                     multiplier="-1.0"
                                     max_effort="10.6" />

     <joint name="${tf_prefix}/r_finger_passive_joint" type="revolute">
        <parent link="${tf_prefix}/palm_link"/>
        <child link="${tf_prefix}/r_truss_arm_link"/>
        <origin xyz="-0.062 0.012 0.008" rpy="0 0 ${pi}"/>
        <axis xyz="0 0 1"/>
        <limit velocity="3.14" effort="10.6" lower="${-pi*0.5}" upper="${pi*0.5}" />
        <mimic joint="${tf_prefix}/gripper_joint" multiplier="-1"/>
        <dynamics damping="0.3" friction="0.0" />
        <implicitSpringDamper>True</implicitSpringDamper>
    </joint>
    
    <xacro:mimic_joint_plugin_gazebo robot_namespace=""
                                     name_prefix="${tf_prefix}/r_finger_passive_joint"
                                     parent_joint="${tf_prefix}/gripper_joint"
                                     mimic_joint="${tf_prefix}/r_finger_passive_joint"
                                     has_pid="false"
                                     multiplier="-1.0"
                                     max_effort="10.6" />

    <joint name="${tf_prefix}/r_finger_2_joint" type="revolute">
        <parent link="${tf_prefix}/r_moment_arm_link"/>
        <child link="${tf_prefix}/r_finger_link"/>
        <origin xyz="0.032 -0.0015 0.005" rpy="0 0 0"/>
        <axis xyz="0 0 1"/>
        <limit velocity="3.14" effort="10.6" lower="${-pi*0.5}" upper="${pi*0.5}" />
        <mimic joint="${tf_prefix}/gripper_joint" multiplier="1"/>
        <dynamics damping="0.3" friction="0.0" />
        <implicitSpringDamper>True</implicitSpringDamper>
    </joint>
    
    <xacro:mimic_joint_plugin_gazebo robot_namespace=""
                                     name_prefix="${tf_prefix}/r_finger_2_joint"
                                     parent_joint="${tf_prefix}/gripper_joint"
                                     mimic_joint="${tf_prefix}/r_finger_2_joint"
                                     has_pid="false"
                                     multiplier="1.0"
                                     max_effort="10.6" />
    
    </xacro:macro>

    <xacro:macro name="box_inertia" params="mass x y z">
        <inertia  ixx="${mass*(y*y+z*z)/12}" ixy = "0" ixz = "0"
                    iyy="${mass*(x*x+z*z)/12}" iyz = "0"
                    izz="${mass*(x*x+z*z)/12}" />
    </xacro:macro>

</robot>