<launch>
    <arg name="robot_name" default="tangs" />
    <arg name="x" default="0.0" />
    <arg name="y" default="0.0" />
    <arg name="z" default="1.015" />

    <!-- Gera o robo no Gazebo -->
    <include file="$(find tangs_simulation)/launch/spawn_tangs_xacro.launch">
        <arg name="robot_name" value="$(arg robot_name)" />
        <arg name="x" value="$(arg x)" />
        <arg name="y" value="$(arg y)" />
        <arg name="z" value="$(arg z)" />
    </include>
    
    <!-- Carrega as configurações dos controladores no Gazebo -->
    <include file="$(find tangs_simulation)/launch/tangs_control.launch">
        <arg name="robot_name" value="$(arg robot_name)" />
    </include>
</launch>